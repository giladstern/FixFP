<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <com.example.gilad.fp.utils.AutoResizeTextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/view2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Pick Type of Code:"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:id="@+id/listButton"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="listOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story"
        android:id="@+id/storyButton"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_alignTop="@+id/listButton"
        android:layout_alignRight="@+id/view2"
        android:layout_alignEnd="@+id/view2"
        android:onClick="storyOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pattern"
        android:id="@+id/patternButton"
        android:layout_below="@+id/listButton"
        android:layout_alignRight="@+id/listButton"
        android:layout_alignEnd="@+id/listButton"
        android:layout_marginTop="49dp"
        android:onClick="patternOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin"
        android:id="@+id/pinButton"
        android:layout_alignTop="@+id/patternButton"
        android:layout_alignLeft="@+id/storyButton"
        android:layout_alignStart="@+id/storyButton"
        android:onClick="pinOnClick" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Code"
        android:id="@+id/checkBox"
        android:layout_below="@+id/patternButton"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:layout_marginTop="35dp"/>

</RelativeLayout>
